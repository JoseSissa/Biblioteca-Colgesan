---
import "@/styles/styles.css";
import "@fontsource/merriweather";
import "@fontsource/poppins";
import { ViewTransitions } from "astro:transitions";
import Footer from "@/components/Footer.astro";
import Background from "@/components/Background.astro";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Proyecto académico para la técnica sistemas del colegio General Santander"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="view-transition" content="same-origin" />
        <meta property="og:title" content="Viajando entre Páginas" />
        <meta
            property="og:description"
            content="Proyecto académico Colegio General Santander"
        />
        <meta
            property="og:url"
            content="https://biblioteca-colgesan.vercel.app/"
        />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <Background />
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        --background: #bec1dc;
        --white: #ffffff;
        /* --text: #2d334a; */
        --text: #000000;
        --border: #272343;

        --slide-transform: 0px;
        --transition: transform 1s ease;
    }
    html {
        font-family: "Merriweather", serif;
        /* font-family: "Poppins", sans-serif; */
        background-color: var(--background);
        color: var(--text);
        background-color: #bec1dc;
        background-image: linear-gradient(180deg, #bbaadd 0%, #bec1dc 100%);
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    main {
        padding: 0 15px;
        margin-top: 98px;
    }
</style>

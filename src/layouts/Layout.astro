---
import "@fontsource/poppins";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="view-transition" content="same-origin" />
        <title>{title}</title>
        <meta property="og:title" content="Biblioteca Colgesan 1" />
        <meta property="og:description" content="Proyecto Biblioteca 2" />
        <meta
            property="og:url"
            content="https://biblioteca-colgesan.vercel.app/"
        />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --background: rgb(240, 238, 226);
        --background-secondary: rgb(253, 252, 247);
        --color: rgb(27, 31, 43);
        --button: #192020;
    }
    html {
        font-family: "Poppins", sans-serif;
        background-color: var(--background);
        color: var(--color);
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    main {
        width: 100%;
        height: 100vh;
        max-width: 1024px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 15px;
    }
    header {
        text-align: center;
    }

    .title-2 {
        font-size: 40px;
        line-height: 40px;
        margin-bottom: 40px;
    }
    .title-3 {
        font-size: 20px;
        margin-bottom: 20px;
    }
    .libros {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 230px));
        gap: 20px;
        justify-content: center;
        text-align: center;
    }

    .libros li {
        list-style: none;
    }

    .libros img {
        width: 100%;
        aspect-ratio: 48/73;
    }

    @media (max-width: 768px) {
        .info {
            grid-template-columns: 1fr;
        }
        .info-imagen {
            text-align: left;
            padding: 60px 20px 30px;
        }
        .title-2 {
            margin-bottom: 32px;
        }
    }
</style>

<script>
    import { ejecutarTransicion } from "@/utils/navegacion.js";
    ejecutarTransicion();
</script>

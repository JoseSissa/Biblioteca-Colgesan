---
import Background from "@/components/Background.astro";
import BackgroundNoise from "@/components/BackgroundNoise.astro";
import "@/styles/styles.css";
import "@fontsource/merriweather";
import { ViewTransitions } from "astro:transitions";
import Footer from "@/components/Footer.astro";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Proyecto académico para la técnica sistemas del colegio General Santander"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="view-transition" content="same-origin" />
        <meta property="og:title" content="Viajando entre Páginas" />
        <meta property="og:description" content="Proyecto académico Colegio General Santander" />
        <meta
            property="og:url"
            content="https://biblioteca-colgesan.vercel.app/"
        />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <!-- <Background /> -->
        <!-- <BackgroundNoise /> -->
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        --background: #BEC1DC;
        --white: #ffffff;
        /* --text: #2d334a; */
        --text: #000000;
        --border: #272343;

        --slide-transform: 0px;
        --transition: transform 1s ease;
    }
    html {
        font-family: "Merriweather", serif;
        background-color: var(--background);
        color: var(--text);
        background-image: linear-gradient(to top, #cd9cf2 0%, #f6f3ff 100%);
        background-image: linear-gradient(to right, #BEC1DC 0%, #bad0e7 0%, #93a0c6 33%, #788ab2 66%, #4c587d 100%);
        background-image: linear-gradient(to top, #BEC1DC 0%, #fff1eb 100%);
        background-image: linear-gradient(to top, #93a0c6 0%, #BEC1DC 100%);
        background-image: linear-gradient(to top, #bad0e7 0%, #BEC1DC 100%);
        background-image: linear-gradient(to bottom, #bec1dc, #adb3d1, #9ca5c7, #8a97bc, #788ab2);
        background-image: radial-gradient(circle, #ffffff, #f0eff6, #e0dfed, #cfd0e4, #bec1dc);
        background-image: radial-gradient(circle, #bec1dc, #cfd0e4, #e0dfed, #f0eff6, #ffffff);
        background-image: linear-gradient(to top, #4c587d, #687194, #848bab, #a1a5c3, #bec1dc);
        background-image: linear-gradient(to top, #bad0e7,#bec1dc);
        background-color: #bec1dc;
        background-image: linear-gradient(180deg, #97D9E1 0%, #bec1dc 100%);
        background-color: #bec1dc;
        background-image: linear-gradient(180deg, #bec1dc 30%, #97D9E1 100%);
        background-color: #bec1dc;
        background-image: linear-gradient(180deg, #bbaadd 20%, #bec1dc 100%);
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    main {
        padding: 0 15px;
        margin-top: 98px;
    }
</style>

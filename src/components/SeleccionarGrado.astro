---
import { INFORMACION_LIBROS } from "@/data/libros.js";
import Card from "./CardGrado.astro";
---

<article class="contenido-principal">
    {
        INFORMACION_LIBROS.map((grado, i) => {
            return (
                <Card id={grado.id} grado={grado.grado} tema={grado.tema} ruta={grado.ruta_general} />
            );
        })
    }
</article>

<style>
    .contenido-principal {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        text-align: center;
        flex-direction: column;
        row-gap: 8px;
        margin-bottom: 40px;
    }

    .contenido-principal div {
        width: 100%;
        padding: 32px;
        border: 3px solid var(--border);
        border-radius: 8px;
        text-align: left;
    }
    .contenido-principal div a {
        display: inline-block;
        width: 100%;
        height: 100%;
        text-decoration: none;
        color: var(--text);
    }

    @media (max-width: 767px) {
        .contenido-principal div {
            max-width: 100%;
        }
    }
</style>

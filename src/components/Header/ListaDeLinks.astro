---
const { linkActive } = Astro.props;
---

<ul id="menu" class="menu">
    <li>
        <a href="/libros" class=`link ${linkActive === 'libros' && 'active'}`>
            LIBROS
        </a>
    </li>
    <li>
        <a href="/" class="link hidden">INICIO</a>
        <a href="/" class="logo">
            <img
                src="/img/icons/logo-2.png"
                alt="Logo del proyecto"
            />
        </a>
    </li>
    <li>
        <a
            href="/nosotros"
            class=`link ${linkActive === 'nosotros' && 'active'}`
        >
            NOSOTROS
        </a>
    </li>
</ul>

<style is:global>
    .menu {
        display: none;
        position: relative;
        top: 0px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
        width: 100%;
        padding: 20px 0;
        backdrop-filter: blur(8px);
        /* border-bottom: 3px solid var(--border); */
    }
    .menu li {
        list-style: none;
    }

    .link {
        display: inline-block;
        padding: 8px 20px;
        text-decoration: none;
        color: var(--text);
        font-weight: bold;
    }

    .expand-menu {
        display: flex;
    }

    .logo {
        display: none;
    }

    @media (min-width: 768px) {
        .menu {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;

            .link {
                position: relative;
                display: block;
                text-decoration: none;
                text-transform: uppercase;
                font-size: 20px;
                letter-spacing: 1px;
                color: var(--text);
                font-weight: bold;

                &.active::after {
                    content: "";
                    position: absolute;
                    height: 2px;
                    left: 12px;
                    top: 32px;
                    right: 12px;
                    bottom: 0;
                    background-color: var(--text);
                }
            }
        }

        .link::before {
            content: "";
            position: absolute;
            height: 2px;
            left: 12px;
            top: 32px;
            right: 12px;
            bottom: 0;
            transform-origin: right;
            transform: scaleX(0);
            background-color: var(--text);
            transition: transform 0.3s ease-out;
        }
        .link:hover::before {
            transform-origin: left;
            transform: scaleX(1);
        }
        .menu .logo {
            position: relative;
            display: inline-block;
            width: 180px;

            img {
                width: 100%;
            }
        }
        .menu .hidden {
            display: none;
        }
    }
</style>

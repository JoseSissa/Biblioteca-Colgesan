---
const { href, title, color } = Astro.props;
---

<li style={`background-color: #FFF;`}>
    <a target="_blank" rel="noopener noreferrer" title={title} href={href}>
        <!-- MaguaRED -->
        <slot />
    </a>
</li>

<style>
    li {
        border-radius: 5px;
    }
    a {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 24px;
        height: 112px;
        overflow: hidden;
        border-radius: 5px;
        /* box-shadow: 2px 5px 5px 3px rgba(0, 0, 0, 0.3); */
        border: 1px solid var(--border);
        box-shadow: 4px 4px 0 var(--border);
    }
</style>

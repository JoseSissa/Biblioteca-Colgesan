---
import { LIBROS_NEW } from "@/data/libros.js";

const { gradoId } = Astro.props;

// InformaciÃ³n del Grado y del libro
const infoGrado = LIBROS_NEW.find(
    (gradoEnLista) => gradoEnLista.id === gradoId
);
---

<ul class="libros">
    {
        infoGrado?.libros.map((libro, index) => {
            return (
                <li class="li">
                    <a href={`/${gradoId}/libro-${libro.id}`}>
                        <img
                            src={`/img/libros/${libro.imagen_libro}.webp`}
                            alt={`Imagen de la portada del libro ${libro.nombre}`}
                            style={`view-transition-name: libro-${libro.id}`}
                        />
                        <h4>{libro.nombre}</h4>
                        <span>{libro.autor}</span>
                        <div class="hoverLibro">
                            <span>ENTRAR</span>
                        </div>
                    </a>
                </li>
            );
        })
    }
</ul>

<style>
    ul {
        padding: 40px 0px 80px;
    }
    a {
        position: relative;
        display: inline-block;
        width: 100%;
        height: 100%;
        text-align: left;
        color: var(--color);
        text-decoration: none;
        transition-property: transform;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 150ms;
    }
    a:hover {
        transform: scale(1.02);
    }
    a img {
        display: block;
        width: 100%;
        height: 100%;
        max-height: 350px;
    }
    a span {
        font-size: 14px;
    }
    a h4 {
        padding-top: 8px;
    }
    .hoverLibro {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        max-height: 350px;
        padding-bottom: 40px;
        background: linear-gradient(
            to bottom,
            transparent 30%,
            var(--color) 100%
        );
        align-content: end;
        text-align: center;
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 300ms ease,
            visibility 300ms ease;
    }

    .hoverLibro span {
        padding: 8px 20px;
        border: 1px solid var(--background-secondary);
        color: var(--background-secondary);
    }
    .active {
        opacity: 1;
        visibility: visible;
    }
</style>

<script>
    const libros = document.querySelectorAll("a");
    libros.forEach((libro) => {
        libro.addEventListener("mouseenter", () => {
            libro.children[libro.children.length - 1].classList.add("active");
        });
        libro.addEventListener("mouseleave", () =>
            libro.children[libro.children.length - 1].classList.remove("active")
        );
    });
</script>

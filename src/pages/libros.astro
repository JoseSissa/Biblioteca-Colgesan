---
import { INFORMACION_LIBROS } from "@/data/libros.js";
import Layout from "../layouts/Layout.astro";
import Header from "@/components/Header/Header.astro";

const listaLibros = INFORMACION_LIBROS.flatMap((libro, i) => libro.libros);
---

<Layout title="Viajando Entre PÃ¡ginas | Libros">
    <Header linkActive="libros" />
    <main>
        <ul class="libros">
            {
                listaLibros.map((libro, i) => {
                    let rutaGeneral: string;
                    if (libro.id.includes("6")) {
                        rutaGeneral = "villa-del-rosario-tradicional";
                    }
                    if (libro.id.includes("7")) {
                        rutaGeneral = "mitos-y-leyendas";
                    }
                    if (libro.id.includes("8")) {
                        rutaGeneral = "obras-colombianas";
                    }
                    if (libro.id.includes("9")) {
                        rutaGeneral = "obras-latinoamericanas";
                    }
                    if (libro.id.includes("10")) {
                        rutaGeneral = "obras-espanolas";
                    }
                    if (libro.id.includes("11")) {
                        rutaGeneral = "obras-universales";
                    }
                    return (
                        <li class="li">
                            <a
                                href={`/libros/${rutaGeneral}/${libro.ruta_especifica}`}
                            >
                                <picture>
                                    <source
                                        srcset={`/img/libros/${rutaGeneral}/${libro.ruta_especifica}.avif`}
                                        type="image/avif"
                                    />
                                    <img
                                        src={`/img/libros/${rutaGeneral}/${libro.ruta_especifica}.webp`}
                                        alt={`Imagen de la portada del libro ${libro.nombre}`}
                                        transition:name={libro.ruta_especifica}
                                    />
                                </picture>
                                <h4>{libro.nombre}</h4>
                                <span>{libro.autor}</span>
                                <div class="hoverLibro">
                                    <span>ENTRAR</span>
                                </div>
                            </a>
                        </li>
                    );
                })
            }
        </ul>
    </main>
</Layout>

<style>
    ul {
        padding: 40px 0px 80px;
    }
    a {
        position: relative;
        display: inline-block;
        width: 100%;
        height: 100%;
        text-align: left;
        color: var(--color);
        text-decoration: none;
        transition-property: transform;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 150ms;
    }
    a:hover {
        transform: scale(1.05);
        & .hoverLibro {
            opacity: 1;
            visibility: visible;
        }
    }
    a img {
        display: block;
        width: 100%;
        height: 100%;
        max-height: 350px;
    }
    a span {
        font-size: 14px;
    }
    a h4 {
        padding-top: 8px;
    }
    .hoverLibro {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        max-height: 350px;
        padding-bottom: 40px;
        background: linear-gradient(
            to bottom,
            transparent 30%,
            var(--color) 100%
        );
        align-content: end;
        text-align: center;
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 300ms ease,
            visibility 300ms ease;
    }

    .hoverLibro span {
        padding: 8px 20px;
        border: 1px solid var(--background-secondary);
        color: var(--background-secondary);
    }
</style>

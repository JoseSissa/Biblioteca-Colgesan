---
import Layout from "../layouts/Layout.astro";
import { LIBROS } from "@/data/libros.js";

const { libroUrl } = Astro.params;

const infoLibro = LIBROS.find(
    (libroEnLista) => libroEnLista.imagen_libro == libroUrl
);

if (!infoLibro) return Astro.redirect("/404");

// if (!libro) Astro.redirect("/404");
---

<Layout title={infoLibro.nombre}>
    <main>
        <section class="info">
            <div class="info-imagen">
                <picture>
                    <img
                        src={`/public/img/libros/${infoLibro.imagen_libro}.webp`}
                        alt={`Portada del libro ${infoLibro.nombre}`}
                    />
                </picture>
            </div>
            <aside>
                <div class="info-general">
                    <h1>{infoLibro.nombre}</h1>
                    <p>Sinopsis: {infoLibro.descripcion}</p>
                    <p>Autor: {infoLibro.autor}</p>
                    <p>Año: {infoLibro.anio}</p>
                    <p>
                        Género(s):
                        {
                            infoLibro.genero.length == 1 ? (
                                <span class="genero">
                                    {infoLibro.genero[0]} &nbsp;
                                </span>
                            ) : (
                                infoLibro.genero.map((elem, i) => {
                                    return (
                                        <span class="genero">
                                            {elem} &nbsp;
                                        </span>
                                    );
                                })
                            )
                        }
                    </p>
                </div>

                <div>
                    <a href="#" class="descargarLibro" target="_blank">
                        Descargar Libro
                    </a>
                </div>
            </aside>
        </section>
    </main>
</Layout>

<style>
    .info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    .info-imagen {
        text-align: center;
    }

    .info-imagen img {
        max-width: 350px;
        object-fit: cover;
    }

    .info-general {
        margin-bottom: 40px;
    }

    .info-general .genero {
        text-transform: capitalize;
    }

    .descargarLibro {
        padding: 10px 20px;
        border-radius: 8px;
        color: var(--color);
        text-decoration: none;
        text-transform: uppercase;
        background-color: rgb(37 99 235);
    }
    .descargarLibro:hover {
        background-color: rgb(29 78 216);
    }
</style>
